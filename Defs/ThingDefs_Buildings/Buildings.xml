<?xml version="1.0" encoding="utf-8" ?>
<Defs> 




	<ThingDef ParentName="BuildingBase">
		<defName>RB_Beekeeping_Workbench_Building</defName>
		<label>beekeeping workbench</label>
		<description>A simple wooden workbench with specialized tools to manipulate wild beehives.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/RB_Beekeeping_Workbench</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.5,3.5)</drawSize>
			<shadowData>
				<volume>(2.9, 0.3, 0.5)</volume>
				<offset>(0, 0, 0)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
			<WoodLog>150</WoodLog>
		</costList>
		
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Cleanliness>-5</Cleanliness>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>RB_Bees</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<designationHotKey>Misc2</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
	</ThingDef>


	<ThingDef ParentName="BenchBase">
		<defName>RB_Beehouse</defName>
		<label>wooden beehouse</label>
		<description>A simple wooden beehouse where bees will live and generate honeycombs for you.</description>
		<thingClass>RimBees.Building_Beehouse</thingClass>

		<graphicData>
			<texPath>Things/Building/RB_Beehouse</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.5,3.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<constructEffect>ConstructWood</constructEffect>
		<costList>
			<WoodLog>50</WoodLog>
		</costList>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<rotatable>false</rotatable>
		    <neverMultiSelect>true</neverMultiSelect>

		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>800</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		    <fertility>2.3</fertility>

		    <building>
     <workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
    </building>
	    <tickerType>Rare</tickerType>
   
		<size>(1,1)</size>
		<designationCategory>RB_Bees</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>


	</ThingDef>


</Defs>
